@{
  Layout = "_Layout";
}

@using VendorTracker.Models;
<div class='main-container'>
<div class='form-container'>
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors here yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
 <a href="/vendors/@vendor.Id"> <h3>@vendor.Name</h3></a>
  
}

<p><a href='/'><button>Back home</button></a></p>
</div>
</div>

